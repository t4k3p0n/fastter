<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= stylesheet_link_tag "users/index", :media => "all" %>
<%= stylesheet_link_tag "users", :media => "all" %>
<%= render 'home/nav' %>


<div class="profile-card" style="color: rgba(240,75,64,0);">
<div class="profile-back" style="background-color: rgb(240,75,64);"></div>
<% if current_user.image? %>
<img class="rounded-circle profile-pic" src=<%= current_user.image %>>
<% else %>
<%= image_tag 'default.png', class: 'rounded-circle profile-pic'%>
<% end %>
<h3 class="profile-name" style="background-color: rgb(240,75,64);"><%= current_user.username %></h3>
<p class="profile-bio" style="color: rgb(0,0,0);"><%= render 'stats' %></p>
</div>
<div class="container">

  <div class="col-xs-12 ">
    <nav>
      <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
      <a class="nav-item nav-link active" id="nav-timeline-tab" data-toggle="tab" href="#nav-timeline" role="tab" aria-controls="nav-timeline" aria-selected="true">タイムライン</a>
        <a class="nav-item nav-link" id="nav-post-tab" data-toggle="tab" href="#nav-post" role="tab" aria-controls="nav-post" aria-selected="true">自分の投稿</a>
        <a class="nav-item nav-link" id="nav-like-tab" data-toggle="tab" href="#nav-like" role="tab" aria-controls="nav-like" aria-selected="false">いいね</a>
      </div>
    </nav>
    <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">

    <div class="tab-pane fade show active" id="nav-timeline" role="tabpanel" aria-labelledby="nav-timeline-tab">

      <% @posts.each do |post| %>
        <a class="portfolio-box" href="/posts/<%= post.id %>">
        <%= image_tag post.img.url%>
        </a>
            <% end %>
            </div>

      <div class="tab-pane fade" id="nav-post" role="tabpanel" aria-labelledby="nav-post-tab">
      <% @user.posts.each do |post| %>
            <a class="portfolio-box" href="/posts/<%= post.id %>">
            <%= image_tag post.img.url%>
            </a>
            <% end %>
            </div>

      <div class="tab-pane fade" id="nav-like" role="tabpanel" aria-labelledby="nav-like-tab">
      <% @user.liked_posts.each do |post| %>
        <a class="portfolio-box" href="/posts/<%= post.id %>">
            <%= image_tag post.img.url%>
            </a>
        <% end %>

        
                  
                
 
       </section>
       
        </div>

 

  
</div>