<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= stylesheet_link_tag "users/index", :media => "all" %>
<%= render 'home/nav' %>


<div class="profile-card" style="color: rgba(240,75,64,0);">
<div class="profile-back" style="background-color: rgb(240,75,64);"></div>
<% if @user.image? %>
<img class="rounded-circle profile-pic" src=<%= @user.image %>>
<% else %>
<%= image_tag 'default.png', class: 'rounded-circle profile-pic'%>
<% end %>
<h3 class="profile-name" style="background-color: rgb(240,75,64);"><%= @user.username %></h3>
<p class="profile-bio" style="color: rgb(0,0,0);"><%= render 'follow_form' %>
　　　<%= render 'stats' %></p>
</div>

<section class="panel panel-default">

    <div class="panel-body">
        <ul class="nav nav-tabs　nav-justified">
            <li class="active"><a data-toggle="tab" href="#home">投稿</a>
            </li>
            <li><a data-toggle="tab" href="#menu2">いいね欄</a></li>
        </ul>

        <div class="tab-content">
            <div id="home" class="tab-pane active">
            <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">投稿</h2>
                    <hr class="my-4">
                </div>
            </div>
        </div>
        <div class="container-fluid p-0">
        <div class="row no-gutters popup-gallery">
        <% @user.posts.each do |post| %>
            <div class="col-sm-6 col-lg-4">
            
                <a class="portfolio-box" href="/posts/<%= post.id %>">
                <%= image_tag post.img.url%>
                    <div class="portfolio-box-caption">
                        <div class="portfolio-box-caption-content">
                            <div class="project-category text-faded">
                            <span>カテゴリー</span>
                            </div>
                            <div class="project-name">
                            <span>カテゴリ</span>
                            </div>
                        </div>
                        </div></a></div>
                                                               
      
       
                <% end %>
            </div>
        </div>
            </div>
            <div id="menu2" class="tab-pane fade">
            <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">投稿</h2>
                    <hr class="my-4">
                </div>
            </div>
        </div>
        <div class="container-fluid p-0">
        <div class="row no-gutters popup-gallery">
        <% @user.liked_posts.each do |post| %>
            <div class="col-sm-6 col-lg-4">
            
                <a class="portfolio-box" href="/posts/<%= post.id %>">
                <%= image_tag post.img.url%>
                    <div class="portfolio-box-caption">
                        <div class="portfolio-box-caption-content">
                            <div class="project-category text-faded">
                            <span>カテゴリー</span>
                            </div>
                            <div class="project-name">
                            <span>カテゴリ</span>
                            </div>
                        </div>
                        </div></a></div>
                                                               
      
       
                
          <% end %>
            </div>
        </div>
            </div>
        </div>
    </div>
</section>

  
