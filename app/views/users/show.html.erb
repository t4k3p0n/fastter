<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= stylesheet_link_tag "users/index", :media => "all" %>
<%= render 'home/nav' %>


<div class="profile-card" style="color: rgba(240,75,64,0);">
<div class="profile-back" style="background-color: rgb(240,75,64);"></div>
<% if @user.image? %>
<img class="rounded-circle profile-pic" src=<%= @user.image %>>
<% else %>
<%= image_tag 'default.png', class: 'rounded-circle profile-pic'%>
<% end %>
<h3 class="profile-name" style="background-color: rgb(240,75,64);"><%= @user.username %></h3>
<p class="profile-bio" style="color: rgb(0,0,0);"><%= render 'follow_form' %>
　　　<%= render 'stats' %></p>
</div>