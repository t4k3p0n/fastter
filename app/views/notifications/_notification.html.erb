<div class="notification-view">


<table class="table">
  <thead>
    <tr>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>  <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span></td>
    </tr>

  </tbody>
</table>


<% if !@comment.nil? %>
  <p class="notification-comment"><%= @comment.content %></p>
<% end %>
</div>