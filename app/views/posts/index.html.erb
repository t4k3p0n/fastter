<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= stylesheet_link_tag "users/index", :media => "all" %>

<%= render 'home/nav' %>
  <section id="services">
    <div class="container">
    <div class="row justify-content-center align-items-center">
                <div class="col-md-6">

                    <h2 class="text-center"><strong>投稿フォーム</strong></h2>
                    <% if flash[:notic] %>
                    <div class="alert alert-primary" role="alert"><%= flash[:notic] %></div>
                    <% end %>
                    <div class="file-upload">
                    <%= form_for  @post do |f| %>
                      <%= f.file_field :img, id: :img,class:"file-upload-btn"%>
                      <%= f.text_field :cat, id: :cat %>
                      <div class="drag-text">
                      <h3></h3>
                    </div>
                      <%= f.submit class:"file-upload-btn" %>
                    <% end %>

                    </div>
                </div>
            </div>
        </div>
        </section>

   