<% if user_signed_in? %>
  <h2>投稿する</h2>
  <%= form_for @post do |f| %>
    <%= f.text_field :img %>
    <%= f.label :画像 %><br />
    <%= f.file_field :img, class: "image" %>
    <p><%= f.check_box :remove_img %>画像を削除する</p>
    <%= f.submit %>
  <% end %>
  <hr>
  <h2>投稿一覧</h2>
  <% @posts.each do |post| %>
    <a href="/users/<%= post.user.id %>"><%= post.user.username %></a>
    <p><a href="/posts/<%= post.id %>"><%= post.img %></a></p>
 
  <% end %>

<% else %>
  <%= link_to "ユーザー登録", new_user_registration_path %>
  <%= link_to "ログイン", new_user_session_path %>
<% end %>