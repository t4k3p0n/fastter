

<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= stylesheet_link_tag "users/index", :media => "all" %>

<%= render 'home/nav' %>
<section id="services">
<div class="container">
<div class="row">
<div class="col-lg-12 text-center">
        <h2 class="section-heading">ランキング</h2>
        <hr class="my-4">
    </div>

<% @post_ranking.each do |like| %>
 <a class="portfolio-box" href="/posts/<%= like.id %>">
<%= image_tag like.img.url%>
</a>
<% end %>
</div>
<br>
    <div class="col-lg-12 text-center">
        <h2 class="section-heading">皆の投稿</h2>
        <hr class="my-4">
    </div>
</div>
</div>
<div class="container-fluid p-0 jscroll">
<div class="row no-gutters popup-gallery">
<% @posts.each do |post| %>
<div class="col-sm-6 col-lg-4">
    <a class="portfolio-box" href="/posts/<%= post.id %>">
    <%= image_tag post.img.url%>
        <div class="portfolio-box-caption">
            <div class="portfolio-box-caption-content">
                <div class="project-category text-faded">
                <span>ユーザーネーム</span>
                </div>
                <div class="project-name">
                <span><%= post.user.username %></span>
                </div>
            </div>
            </div></a></div>
    <% end %>
    <%= paginate @posts %>
    </div>
</div>


