<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= render 'home/nav' %>


<section id="services">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
    <div class="row justify-content-center align-items-center">
<div class="col-md-6">
<div class="col-md-12">

<% if alert %>
<div class="error_field alert alert-danger" role="alert">
<p class="error_msg"><%= alert %></p></div>
<% end %>

                    <h2 class="text-center"><strong>ログイン</strong></h2>
                            <div class="form-group"><%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>"form-control", placeholder: 'メールアドレス'%></div>
                            <div class="form-group"><%= f.password_field :password, autocomplete: "current-password"  ,:class=>"form-control", placeholder: 'パスワード'%></div>
                            <div class="form-group"><%= f.submit "ログインする" ,:class=>"btn btn-primary btn-block" %></div>
                            <div class="form-group"><%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post,:class=>"btn btn-primary btn-block" %></div>
                            <div class="field">
                            <% if devise_mapping.rememberable? -%> 
                            <div class="field">
                              <%= f.check_box :remember_me %>
                              <%= f.label :次回から省略する %>
                            </div>
                          <% end %>
                          </div>
                            <a class="already" href="/users/sign_up">まだアカウントを持っていない方はこちら</a></div> 
                    </div>
                </div>
            </div>
        </div>
        <% end %>
</section>

