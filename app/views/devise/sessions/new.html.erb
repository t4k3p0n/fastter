<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= render 'home/nav' %>


<section id="services">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
    <div class="row justify-content-center align-items-center">
                <div class="col-md-6">
                    <div class="col-md-12">
                    <%= devise_error_messages %>
                    <h2 class="text-center"><strong>ログイン</strong></h2>
                            <div class="form-group"><%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>"form-control", placeholder: 'メールアドレス'%></div>
                            <div class="form-group"><%= f.password_field :password, autocomplete: "current-password"  ,:class=>"form-control", placeholder: 'パスワード'%></div>
                            <div class="form-group"><%= f.submit "ログイン" ,:class=>"btn btn-primary btn-block" %></div>
                            <div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                          </div>
                            <a class="already" href="/users/sign_up">まだアカウントを持っていない方はこちら</a></div> 
                    </div>
                </div>
            </div>
        </div>
        <% end %>
</section>

