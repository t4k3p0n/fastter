<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= render 'home/nav' %>


<section id="services">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="container">
    <div class="row justify-content-center align-items-center">
                <div class="col-md-6">
                    <div class="col-md-12">
                    <%= devise_error_messages %>
                    <h2 class="text-center"><strong>新規登録</strong></h2>
                            <div class="form-group"><%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>"form-control", placeholder: 'メールアドレス'%></div>
                            <div class="form-group"><%= f.text_field :username, autocomplete:"username",:class=>"form-control" ,placeholder: 'ユーザーネーム'%></div>
                            <div class="form-group"><%= f.password_field :password, autocomplete: "new-password"  ,:class=>"form-control", placeholder: 'パスワード'%></div>
                            <div class="form-group"><%= f.password_field :password_confirmation, autocomplete: "new-password"  ,:class=>"form-control", placeholder: 'パスワード(確認用)'%></div>
                            <div class="form-group"><%= f.submit "アカウント作成" ,:class=>"btn btn-primary btn-block" %></div>
                            <div class="form-group"><%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post,:class=>"btn btn-primary btn-block" %></div>
                            <a class="already" href="/users/sign_in">既にアカウントをお持ちの場合はこちら</a>
                            
                            </div> 
                            
                    </div>
                </div>
            </div>
        </div>
        <% end %>
</section>

