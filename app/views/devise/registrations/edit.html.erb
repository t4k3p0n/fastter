<%= render 'home/nav' %>
<%= stylesheet_link_tag "home/index", :media => "all" %>
<%= stylesheet_link_tag "users/index", :media => "all" %>
<section id="services">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="container">
    <div class="row justify-content-center align-items-center">
                <div class="col-md-6">
                    <div class="col-md-12">
                  
                    <% if resource.email == 'guest@example.com' %>
                    <h2>ゲストユーザーのためこの機能はロックされています</h2>
                    <% else %>
                    <%= devise_error_messages %>
                    <h2 class="text-center"><strong>アカウント情報の設定</strong></h2>
                    <div class="text-center">
                    <% if current_user.image? %>
                    <img class="rounded-circle profile-pic" src=<%= current_user.image %>>
                    <% else %>
                    <%= image_tag 'default.png', class: 'rounded-circle profile-pic'%>
                    <% end %></div>
                            <div class="form-group"><%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>"form-control", placeholder: 'メールアドレスを変更する'%></div>
                            <div class="form-group"><%= f.text_field :username, autocomplete:"username",:class=>"form-control" ,placeholder: 'ユーザーネームを変更する'%></div>
                            <div class="form-group"><%= f.password_field :password, autocomplete: "new-password"  ,:class=>"form-control", placeholder: 'パスワードを変更する'%></div>
                            <div class="form-group"><%= f.password_field :password_confirmation, autocomplete: "new-password"  ,:class=>"form-control", placeholder: 'パスワード変更確認'%></div>
                            <div class="form-group"><%= f.password_field :current_password, autocomplete: "current-password"  ,:class=>"form-control", placeholder: '現在のパスワード（入力必須）'%></div>
                            <div class="form-group"><%= f.file_field :image %></div> 
                            <div class="form-group"><%= f.submit "アカウント情報を更新" ,:class=>"btn btn-primary btn-block" %></div></div>
                    </div>
                    <% end %> 
                   
                </div>
            </div>
        </div>
        <% end %>
</section>